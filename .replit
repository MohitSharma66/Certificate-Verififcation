modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Blockchain"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd certificate-frontend && npm run dev -- --port 5000 --host 0.0.0.0"
waitForPort = 5000

[[workflows.workflow]]
name = "Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && npm start"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Blockchain"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node_modules/.bin/ganache --port 8080 --networkId 5777 --gasLimit 6721975 --gasPrice 20000000000"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001
externalPort = 5173

[[ports]]
localPort = 8080
externalPort = 8080
exposeLocalhost = true

[[ports]]
localPort = 34295
externalPort = 6000

[[ports]]
localPort = 37117
externalPort = 6800

[[ports]]
localPort = 38105
externalPort = 3002

[[ports]]
localPort = 42101
externalPort = 3000

[[ports]]
localPort = 43707
externalPort = 80

[[ports]]
localPort = 44987
externalPort = 4200

[[ports]]
localPort = 46007
externalPort = 3003

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "cd server && npm start & cd certificate-frontend && npm run dev -- --port 5000 --host 0.0.0.0"]
build = ["bash", "-c", "cd certificate-frontend && npm run build"]
